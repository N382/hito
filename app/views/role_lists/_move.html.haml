.modal
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title
          %b= t('.title', role: @moving_role_type.constantize.label)

      = standard_form(path_args(entry),
        url: move_group_role_list_path(group), method: :put) do |f|
        .modal-body
          .row-fluid
            = hidden_field_tag('return_url', params[:return_url])
            = hidden_field_tag('moving_role_type', @moving_role_type)
            = hidden_field_tag('ids', @moving_people)
            = render 'roles/fields', f: f
        .modal-footer
          = submit_button(f, t('.submit', count: @moving_roles_count))
          %button.btn{ type: 'button', onclick: "$('#move-modal').html('')" }
            = ti('button.cancel')
